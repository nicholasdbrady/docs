{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "maple",
  "name": "Foundry Docs",
  "colors": {
    "primary": "#0078d4",
    "light": "#07C983",
    "dark": "#15803D"
  },
  "favicon": {
    "dark": "logo/foundry-icon.png",
    "light": "logo/foundry-icon.png"
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Get Started",
            "pages": [
              "index",
              "quickstart",
              "changelog",
              "development"
            ]
          },
          {
            "group": "Core Concepts",
            "pages": [
              "core-concepts/markdown",
              "core-concepts/code",
              "core-concepts/images",
              "core-concepts/settings",
              "core-concepts/navigation",
              "core-concepts/reusable-snippets"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "API Documentation",
            "pages": [
              "api-reference/introduction"
            ]
          },
          {
            "group": "Endpoint Examples",
            "pages": [
              "api-reference/endpoint/get",
              "api-reference/endpoint/create",
              "api-reference/endpoint/delete",
              "api-reference/endpoint/webhook"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Documentation",
          "href": "https://ai.azure.com/docs",
          "icon": "code"
        },
        {
          "anchor": "Community",
          "href": "https://aka.ms/foundry-devs",
          "icon": "users"
        },
        {
          "anchor": "Blog",
          "href": "https://devblogs.microsoft.com/foundry",
          "icon": "pencil"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/foundry-icon.png",
    "dark": "/logo/foundry-icon.png"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:hi@mintlify.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://dashboard.mintlify.com"
    }
  },
  "footer": {
    "socials": {
      "x": "https://x.com/aifoundrydevs",
      "github": "https://github.com/azure-ai-foundry"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt"
    ]
  }
}